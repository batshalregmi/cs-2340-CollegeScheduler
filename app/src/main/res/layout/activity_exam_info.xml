<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textColor="#FFFFFFFF"
    android:background="@color/charcoal"
    tools:context=".ExamInfo">

    <EditText
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/lapis"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFFFF"
        android:id="@+id/searchFilter"
        android:hint="🔍Search..."


        />
    <ListView
        android:id="@+id/exam_list_view"
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:background="@color/carolina_blue"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFFFF"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFFFF"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/exam_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:layout_weight="4"
            android:textColorHint="#FFFFFFFF"
            android:hint="MM/DD/YYY -EXAM INFO" />


        <Button
            android:id="@+id/exam_add_button"
            android:layout_width="0dp"
            android:background="#5392C2"
            android:textColor="@color/white"
            android:text="Add"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>