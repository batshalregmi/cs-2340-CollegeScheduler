<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textColor="#FFFFFFFF"
    android:background="@color/charcoal"
    tools:context=".ExamInfo">
    <EditText
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/lapis"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFFFF"
        android:id="@+id/searchFilter"
        android:hint="@string/search"
        android:autofillHints="String" />

    <ListView
        android:id="@+id/exam_list_view"
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:layout_marginBottom="12dp"
        android:background="@color/carolina_blue"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFFFF" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFFFF"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/exam_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFFFF"
            android:layout_weight="4"
            android:hint="@string/examInfo_list_hint"
            android:autofillHints=""
             />

        <EditText
            android:id="@+id/btnDatePicker"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@color/lapis"
            android:ems="10"
            android:hint="Date:"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/scheduleSubmitButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/scheduleProfessorBox"
            app:layout_constraintTop_toBottomOf="@+id/scheduleCourseNumber"
            app:layout_constraintVertical_bias="0.5" />

        <EditText
            android:id="@+id/btnTimePicker"
            android:layout_width="76dp"
            android:layout_height="40dp"
            android:background="@color/lapis"
            android:ems="10"
            android:hint="Time:"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/scheduleSubmitButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/scheduleProfessorBox"
            app:layout_constraintTop_toBottomOf="@+id/scheduleCourseNumber"
            app:layout_constraintVertical_bias="0.5" />


        <Button
            android:id="@+id/exam_add_button"
            android:layout_width="0dp"
            android:background="#5392C2"
            android:textColor="@color/white"
            android:text="@string/add"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>